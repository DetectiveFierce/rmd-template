{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Knit",
      "type": "shell",
      "command": "Rscript",
      "args": [
        "-e",
        "rmarkdown::render(\"${file}\", output_format=\"pdf_document\", output_file=file.path(dirname(\"${fileDirname}\"), \"output.pdf\"))"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Open output.pdf in Zathura",
      "type": "shell",
      "command": "zathura",
      "args": ["${workspaceFolder}/output.pdf", "--fork"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
